@model ConsulTech.Web.Models.ViewModels.Competence.CompetenceEditViewModel

@{
    ViewData["Title"] = "Créer une compétence";
}

<h1>Créer une compétence</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Champ Titre -->
            <div class="form-group mb-3">
                <label asp-for="Titre" class="form-label"></label>
                <input asp-for="Titre" class="form-control" placeholder="Ex: Développement C#" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>

            <!-- Sélection Catégorie -->
            <div class="form-group mb-3">
                <label asp-for="CategorieId" class="form-label"></label>
                <select asp-for="CategorieId" asp-items="Model.Categories" class="form-select">
                    <option value="">-- Sélectionnez une catégorie --</option>
                </select>
                <span asp-validation-for="CategorieId" class="text-danger"></span>
            </div>

            <!-- Sélection Niveau -->
            <div class="form-group mb-3">
                <label asp-for="NiveauId" class="form-label"></label>
                <select asp-for="NiveauId" asp-items="Model.Niveaux" class="form-select">
                    <option value="">-- Sélectionnez un niveau --</option>
                </select>
                <span asp-validation-for="NiveauId" class="text-danger"></span>
            </div>

            <!-- Sélection Consultant -->
            <div class="form-group mb-3">
                <label asp-for="ConsultantId" class="form-label"></label>
                <select asp-for="ConsultantId" asp-items="Model.Consultants" class="form-select">
                    <option value="">-- Sélectionnez un consultant --</option>
                </select>
                <span asp-validation-for="ConsultantId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
