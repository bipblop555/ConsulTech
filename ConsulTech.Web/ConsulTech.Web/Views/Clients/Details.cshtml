@model ConsulTech.Web.Models.ViewModels.ClientListVm
@{
    ViewData["Title"] = "Détails du client";
}

<h1 class="mb-3">Détails du client</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Nom</h4>
        <dl class="row">
            <dt class="col-sm-3">Secteur</dt>
            <dd class="col-sm-9">@Model.Secteur</dd>

            <dt class="col-sm-3">Adresse</dt>
            <dd class="col-sm-9">@Model.Adresse</dd>

            <dt class="col-sm-3">Contact</dt>
            <dd class="col-sm-9">@Model.Contact</dd>
        </dl>
        <div class="mt-3">
            <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.Id">Editer</a>
            <a class="btn btn-secondary" asp-action="Index">Retour</a>
        </div>
    </div>
</div>
